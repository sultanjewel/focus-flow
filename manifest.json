{
  "manifest_version": 3,
  "name": "Focus Flow - Productivity Timer",
  "description": "Stay productive with Pomodoro technique, website blocking, and task management in a beautiful new tab page.",
  "version": "1.1.0",
  "permissions": [
    "storage",
    "tabs",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon_default.png",
      "48": "images/icon_default.png",
      "128": "images/icon_default.png"
    }
  },
  "icons": {
    "16": "images/icon_default.png",
    "48": "images/icon_default.png",
    "128": "images/icon_default.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "chrome_url_overrides": {
    "newtab": "newtab.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["block.html", "sounds/ding.mp3"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
